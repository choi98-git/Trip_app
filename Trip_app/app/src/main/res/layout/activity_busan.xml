<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/air" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="경상도 (부산)"
                    android:textColor="@color/purple_200"
                    android:textSize="40dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:background="#000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/kam"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:padding="20dp"
                    app:srcCompat="@drawable/kam"></ImageView>

                <ImageView
                    android:id="@+id/taeJong"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:padding="20dp"
                    app:srcCompat="@drawable/taejong"></ImageView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="감천 문화마을"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="태종대"
                    android:textSize="20dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/thebey"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:padding="20dp"
                    app:srcCompat="@drawable/thebey"></ImageView>

                <ImageView
                    android:id="@+id/dong"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:padding="20dp"
                    app:srcCompat="@drawable/dong"></ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="더베이 101"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="동백섬"
                    android:textSize="20dp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/sky"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:padding="20dp"
                    app:srcCompat="@drawable/sky"></ImageView>

                <ImageView
                    android:id="@+id/kwabg"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:padding="20dp"
                    app:srcCompat="@drawable/kwang"></ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="오륙도 스카이워크"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="광안리 해수욕장"
                    android:textSize="20dp"></TextView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>